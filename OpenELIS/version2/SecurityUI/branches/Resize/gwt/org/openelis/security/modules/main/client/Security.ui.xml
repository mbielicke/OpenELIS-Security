<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
             xmlns:g='urn:import:com.google.gwt.user.client.ui' 
             xmlns:w='urn:import:org.openelis.gwt.widget'
             xmlns:t='urn:import:org.openelis.gwt.widget.table'>

  <ui:with type="org.openelis.security.messages.SecurityMessages" field="msg" />
  <ui:with type="org.openelis.gwt.resources.UIResources" field="libRes" />
  <ui:with type="org.openelis.security.modules.main.client.resources.SecurityResources" field="res" />

  <g:LayoutPanel styleName="{res.style.AppBackground}">
    <g:layer top="0px" height="30px">
    <g:AbsolutePanel styleName="{libRes.menuCss.topMenuBar}" width="100%">
      <w:MenuBar>
        <w:Menu label="{msg.system}">
          <w:MenuItem description="{msg.logoutDescription}" display="{msg.logout}" enabled="true" icon="logoutIcon" ui:field="logout" />
        </w:Menu>
        <w:Menu label="{msg.permissions}">
          <w:MenuItem description="" display="{msg.systemUser}" enabled="true" icon="systemUserIcon" ui:field="systemUser" />
        </w:Menu>
        <w:Menu label="{msg.utilities}">
          <w:MenuItem description="" display="{msg.templates}" enabled="true" icon="templateIcon" ui:field="template" />
          <w:MenuItem description="" display="{msg.application}" enabled="true" icon="applicationIcon" ui:field="application" />
        </w:Menu>
      </w:MenuBar>
    </g:AbsolutePanel>
    </g:layer>
    <g:layer top="30px" bottom="0px">
      <w:Browser ui:field="browser" limit="10" />
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>