<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:w='urn:import:org.openelis.ui.widget'
  xmlns:t='urn:import:org.openelis.ui.widget.table'>

  <ui:with type="org.openelis.security.messages.SecurityMessages" field="prm" />
  <ui:with type="org.openelis.ui.resources.UIResources" field="libRes" />
  <ui:with type="org.openelis.security.modules.main.client.resources.SecurityResources" field="res" />

  <g:SplitLayoutPanel ui:field="layout" styleName="{res.style.WhiteContentPanel}">
    <g:west size="225">
      <g:LayoutPanel ui:field="sidePanel">
        <g:layer left="0px" top="0px" width="25px" bottom="0px">
          <w:AtoZButtons ui:field="atozButtons" multiColumn="false" />
        </g:layer>
        <g:layer top="0px" bottom="25px" left="25px" right="0px">
          <t:Table ui:field="atozTable" horizontalScroll="ALWAYS" verticalScroll="ALWAYS" visibleRows="27" styleName="{libRes.table.ScreenTableWithSides}" header="true">
            <t:Column label="{prm.gen_name}" width="175">
              <t:LabelCell />
            </t:Column>
          </t:Table>
        </g:layer>
        <g:layer bottom="0px" height="25px">
          <g:HorizontalPanel horizontalAlignment="CENTER" width="100%">
            <g:HorizontalPanel>
              <w:Button ui:field="atozPrev" leftIcon="{libRes.buttonPanel.PreviousButtonImage}" enabled="false"  css="{libRes.buttonPanel}"/>
              <w:Button ui:field="atozNext" leftIcon="{libRes.buttonPanel.NextButtonImage}" enabled="false" css="{libRes.buttonPanel}"/>
            </g:HorizontalPanel>
          </g:HorizontalPanel>
        </g:layer>
      </g:LayoutPanel>
    </g:west>
    <g:center>
      <g:LayoutPanel>
        <g:layer top="0px" left="0px" height="30px" right="0px">
          <g:AbsolutePanel styleName="{libRes.buttonPanel.ButtonPanelContainer}">
            <g:HorizontalPanel width="100%">
              <w:Button css="{libRes.buttonPanel}" ui:field="query" leftIcon="{libRes.buttonPanel.QueryButtonImage}" text="{prm.btn_query}" toggles="true" />
              <w:Button css="{libRes.buttonPanel}" ui:field="previous" leftIcon="{libRes.buttonPanel.PreviousButtonImage}" text="{prm.btn_previous}" />
              <w:Button css="{libRes.buttonPanel}" ui:field="next" leftIcon="{libRes.buttonPanel.NextButtonImage}" text="{prm.btn_next}" />
              <g:AbsolutePanel styleName="{libRes.buttonPanel.ButtonDivider}" />
              <w:Button css="{libRes.buttonPanel}" ui:field="add" leftIcon="{libRes.buttonPanel.AddButtonImage}" text="{prm.btn_add}" toggles="true" />
              <w:Button css="{libRes.buttonPanel}" ui:field="update" leftIcon="{libRes.buttonPanel.UpdateButtonImage}" text="{prm.btn_update}" toggles="true" />
              <w:Button css="{libRes.buttonPanel}" ui:field="delete" leftIcon="{libRes.buttonPanel.DeleteButtonImage}" text="{prm.btn_delete}"/>
              <g:AbsolutePanel styleName="{libRes.buttonPanel.ButtonDivider}" />
              <w:Button css="{libRes.buttonPanel}" ui:field="commit" leftIcon="{libRes.buttonPanel.CommitButtonImage}" text="{prm.btn_commit}" />
              <w:Button css="{libRes.buttonPanel}" ui:field="abort" leftIcon="{libRes.buttonPanel.AbortButtonImage}" text="{prm.btn_abort}" />
            </g:HorizontalPanel>
          </g:AbsolutePanel>
        </g:layer>
        <g:layer top="30px" left="0px" right="0px" height="75px">
          <g:HTMLPanel>
            <table class="{res.style.Form}">
              <tr>
                <td class="{res.style.Prompt}"><ui:text from="{prm.gen_name}" /></td>
                <td>
                  <w:TextBox case="LOWER" ui:field="name" maxLength="18" required="true" width="131px" />
                </td>
              </tr>
              <tr>
                <td class="{res.style.Prompt}"><ui:text from="{prm.gen_description}" /></td>
                <td>
                  <w:TextBox ui:field="description" maxLength="60" width="425px" />
                </td>
              </tr>
            </table>
          </g:HTMLPanel>
        </g:layer>
        <g:layer top="105px" left="0px" bottom="0px" right="0px">
          <g:LayoutPanel>
            <g:layer top="0px" height="60%">
              <g:LayoutPanel>
                <g:layer top="0px" bottom="25px">
                  <t:Table horizontalScroll="ALWAYS" ui:field="moduleTable" visibleRows="9" styleName="{libRes.table.ScreenTableWithSides}"
                    verticalScroll="ALWAYS" width="600px" header="true">
                    <t:Column label="{prm.gen_name}" width="120">
                      <t:TextBoxCell>
                        <w:TextBox case="LOWER" maxLength="32" required="true" />
                      </t:TextBoxCell>
                    </t:Column>
                    <t:Column label="{prm.gen_description}" width="321">
                      <t:TextBoxCell>
                        <w:TextBox maxLength="80" />
                      </t:TextBoxCell>
                    </t:Column>
                    <t:Column label="{prm.gen_selectPerm}" width="25">
                      <t:CheckBoxCell />
                    </t:Column>
                    <t:Column label="{prm.gen_addPerm}" width="25">
                      <t:CheckBoxCell />
                    </t:Column>
                    <t:Column label="{prm.gen_updatePerm}" width="25">
                      <t:CheckBoxCell />
                    </t:Column>
                    <t:Column label="{prm.gen_deletePerm}" width="25">
                      <t:CheckBoxCell />
                    </t:Column>
                    <t:Column label="{prm.gen_clause}" width="325">
                      <t:TextBoxCell>
                        <w:TextBox />
                      </t:TextBoxCell>
                    </t:Column>
                  </t:Table>
                </g:layer>
                <g:layer bottom="0px" height="25px">
                  <g:HorizontalPanel styleName="libRes.table.TableButtonFooter">
                    <w:Button ui:field="addModuleButton" leftIcon="{res.style.AddRowButtonImage}" text="{prm.gen_addRow}" />
                    <w:Button ui:field="removeModuleButton" leftIcon="{res.style.RemoveRowButtonImage}" text="{prm.gen_removeRow}" />
                    <w:Button ui:field="showClauseButton" text="{prm.gen_showClause}" />
                  </g:HorizontalPanel>
                </g:layer>
              </g:LayoutPanel>
            </g:layer>
            <g:layer bottom="0px" height="40%">
              <g:LayoutPanel>
                <g:layer top="0px" bottom="25px">
                  <t:Table horizontalScroll="ALWAYS" ui:field="sectionTable" visibleRows="7" styleName="{libRes.table.ScreenTableWithSides}"
                    verticalScroll="ALWAYS" width="600px" header="true">
                    <t:Column label="{prm.gen_name}" width="120">
                      <t:TextBoxCell>
                        <w:TextBox case="LOWER" maxLength="20" required="true" />
                      </t:TextBoxCell>
                    </t:Column>
                    <t:Column label="{prm.gen_description}" width="400">
                      <t:TextBoxCell>
                        <w:TextBox maxLength="60" />
                      </t:TextBoxCell>
                    </t:Column>
                  </t:Table>
                </g:layer>
                <g:layer bottom="0px" height="25px">
                  <g:HorizontalPanel>
                    <w:Button ui:field="addSectionButton" leftIcon="{res.style.AddRowButtonImage}" text="{prm.gen_addRow}" />
                    <w:Button ui:field="removeSectionButton" leftIcon="{res.style.RemoveRowButtonImage}" text="{prm.gen_removeRow}" />
                  </g:HorizontalPanel>
                </g:layer>
              </g:LayoutPanel>
            </g:layer>
          </g:LayoutPanel>
        </g:layer>
      </g:LayoutPanel>
    </g:center>
  </g:SplitLayoutPanel>

</ui:UiBinder>